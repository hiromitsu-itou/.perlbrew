\&    hash => \*(Aqmy_index\*(Aq,
\&  );
\&  ...
\&  
\&  my $obj = MyObject\->new( foo => \*(AqFoozle\*(Aq );
\&  print $obj\->foo();
\&  
\&  $obj\->bar(\*(AqBarbados\*(Aq);
