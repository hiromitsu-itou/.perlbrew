#!/home/ito/.perlbrew/perl5/perls/perl-5.12.4/bin/perl

eval 'exec /home/ito/.perlbrew/perl5/perls/perl-5.12.4/bin/perl  -S $0 ${1+"$@"}'
    if 0; # not running under some shell

use strict;
use warnings;
# PODNAME: moose-outdated

use Getopt::Long;
use Moose::Conflicts;

my $verbose;
GetOptions( 'verbose|v' => \$verbose );

if ($verbose) {
    Moose::Conflicts->check_conflicts;
}
else {
    my @conflicts = Moose::Conflicts->calculate_conflicts;
    print "$_\n" for map { $_->{package} } @conflicts;
    exit @conflicts;
}
